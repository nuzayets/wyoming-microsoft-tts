{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug TTS",
            "type": "debugpy",
            "request": "launch",
            "module": "wyoming_microsoft_tts",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
            },
            "args": [
                "--voice",
                "en-GB-SoniaNeural",
                "--service-region",
                "eastus",
                "--download-dir",
                "./temp/",
                "--update-voices",
                "--debug",
                "--uri",
                "tcp://0.0.0.0:10200",
                "--sample-rate", "24000",
            ]
        },
    ]
}